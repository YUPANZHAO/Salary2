<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StyleInfo">

    <RelativeLayout
        android:id="@+id/style_info_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:background="@drawable/shape"
        android:elevation="5dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:id="@+id/style_info_tv_stylename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="款式："
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/style_info_btn_set"
            android:layout_marginRight="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/style_info_tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单价："
            android:textSize="18sp"
            android:layout_below="@id/style_info_tv_stylename"
            android:layout_marginTop="2dp"
            />
        <Button
            android:id="@+id/style_info_btn_set"
            android:layout_width="70dp"
            android:layout_height="45dp"
            android:text="修改"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/green_button"
            android:layout_toLeftOf="@id/style_info_btn_del"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            />
        <Button
            android:id="@+id/style_info_btn_del"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:text="删除"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/red_button"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/style_info_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/style_info_title">
        <Button
            android:id="@+id/style_info_btn_add"
            android:layout_width="70dp"
            android:layout_height="45dp"
            android:text="添加"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/button"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/style_info_tv_statistics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="累计：XXX元(xxx件)"
            android:textSize="19sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/style_info_head"
        android:background="@drawable/shape"
        android:elevation="5dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp">
        <LinearLayout
            android:id="@+id/style_info_listhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="10dp"
            android:paddingHorizontal="15dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="日期"
                android:textSize="18sp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="数量"
                android:textSize="18sp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="金额"
                android:textSize="18sp"
                />
        </LinearLayout>
        <ListView
            android:id="@+id/style_info_lv_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/style_info_listhead"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:scrollbars="none"
            />
    </RelativeLayout>

</RelativeLayout>