<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp" android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:padding="20dp">

    <TextView
        android:id="@+id/del_record_dialog_tv_alert"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="是否确认删除该记录？"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        />
    <TextView
        android:id="@+id/del_record_dialog_tv_time"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="日期：yyyy-MM-dd"
        android:textSize="18sp"
        android:layout_below="@id/del_record_dialog_tv_alert"
        android:layout_centerInParent="true"
        android:paddingLeft="20dp"
        android:layout_marginTop="2dp"
        />
    <TextView
        android:id="@+id/del_record_dialog_tv_stylename"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="款式：xxxx"
        android:textSize="18sp"
        android:layout_below="@id/del_record_dialog_tv_time"
        android:layout_centerInParent="true"
        android:paddingLeft="20dp"
        android:layout_marginTop="2dp"
        />
    <TextView
        android:id="@+id/del_record_dialog_tv_number"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="数量：xx"
        android:textSize="18sp"
        android:layout_below="@id/del_record_dialog_tv_stylename"
        android:layout_centerInParent="true"
        android:paddingLeft="20dp"
        android:layout_marginTop="2dp"
        />
    <Button
        android:id="@+id/del_record_dialog_btn_del"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:background="@drawable/red_button"
        android:textSize="15sp"
        android:text="确认删除"
        android:textColor="@color/white"
        android:layout_centerInParent="true"
        android:layout_below="@id/del_record_dialog_tv_number"
        android:layout_marginTop="5dp"
        />


</RelativeLayout>