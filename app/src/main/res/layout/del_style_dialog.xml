<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <TextView
        android:id="@+id/del_style_dialog_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注意！！！"
        android:gravity="center_horizontal"
        android:textSize="19sp"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/del_style_dialog_tv_alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="删除该款式的同时会删除掉该款式的所有记录！"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/del_style_dialog_tv_title"
        android:layout_marginTop="5dp"
        />
    <Button
        android:id="@+id/del_style_dialog_btn_del"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认删除"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:background="@drawable/red_button"
        android:layout_below="@id/del_style_dialog_tv_alert"
        />

</RelativeLayout>